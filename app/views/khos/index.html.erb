<div class="container mt-4">
  <h1>Danh sách Kho</h1>

  <table class="table table-striped mt-3">
    <thead>
      <tr>
        <th>Mã Kho</th>
        <th>Mã QL</th>
        <th>Tên Kho</th>
        <th>Số Lượng Tồn Kho</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @khos.each do |kho| %>
        <tr>
          <td><%= kho.MaKho %></td>
          <td><%= kho.MaQL %></td>
          <td><%= kho.TenKho %></td>
          <td><%= kho.SLTonKho %></td>
          <td><%= link_to 'Xem', kho_path(id: kho.id), class: 'btn btn-info btn-sm' %></td>
          <td><%= link_to 'Sửa', edit_kho_path(id: kho.id), class: 'btn btn-warning btn-sm' %></td>
          <td><%= button_to 'Xóa', kho_path(id: kho.id), method: :delete, data: { confirm: 'Bạn chắc chắn muốn xóa?' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Thêm Kho mới', new_kho_path, class: 'btn btn-primary' %>
</div>
