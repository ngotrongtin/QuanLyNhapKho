<div class="container mt-4">
  <h1>Quan Lys</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Ma QL</th>
        <th>Ho</th>
        <th>Ten</th>
        <th>Ngay Sinh</th>
        <th>SDT</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @quan_lies.each do |quan_ly| %>
        <tr>
          <td><%= quan_ly.MaQL %></td>
          <td><%= quan_ly.Ho %></td>
          <td><%= quan_ly.Ten %></td>
          <td><%= quan_ly.NgaySinh %></td>
          <td><%= quan_ly.SDT %></td>
          <td><%= link_to 'Show', quan_ly_path(id: quan_ly.id), class: 'btn btn-info btn-sm' %></td>
          <td><%= link_to 'Edit', edit_quan_ly_path(id: quan_ly.id), class: 'btn btn-warning btn-sm' %></td>
          <td><%= button_to 'Destroy', quan_ly_path(id: quan_ly.id), method: :delete, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-3">
    <%= link_to 'New Quan Ly', new_quan_ly_path, class: 'btn btn-primary' %>
  </div>
</div>
